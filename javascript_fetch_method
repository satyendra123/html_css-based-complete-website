// EXAMPLE-3 fetch the json format data

function makefunction(){
    console.log("button clicked");
     const promiseobj = fetch('data.json').then((res)=>{
        console.log(res.json)
        return res.json()
     }).then((data)=>{
        alert(data.name)
        alert(data.age)
        alert(data.city)
        alert(data.designation)
     })
}

